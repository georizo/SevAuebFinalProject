@page
@model SevStudentsApp.Pages.Students.UpdateModel
@{
}

<h2>Τροποποίηση Φοιτητή</h2>
@if (!Model.errorMessage.Equals(""))
{
    <h2><strong>@Model.errorMessage</strong></h2>
}

<form method="POST">
    <div class="row mb-3">
        <input type="hidden" class="form-control" name="id"  
                   value="@Model.studentDto.Id" />
        
    </div>
    <div class="row mb-3">
        <label for="firstname" class="col-md-1 col-form-label">Όνομα</label>
        <div>
            <input type="text" class="form-control"
                   name="firstname" id="firstname" placeholder="Εισάγετε το όνομα σας"
                   value="@Model.studentDto.Firstname" />
        </div>
    </div>
    <div class="row mb-3">
        <label for="lastname" class="col-md-1 col-form-label">Επώνυμο</label>
        <div>
            <input type="text" class="form-control"
                   name="lastname" id="lastname" placeholder="Εισάγετε το επώνυμο σας"
                   value="@Model.studentDto.Lastname" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-md-1 col-md-3 d-grid">
            <button type="submit" class="btn btn-primary">Τροποίηση</button>
        </div>
        <div class="offset-md-1 col-md-3 d-grid">
            <a href="/Students/Index" role="button" class="btn btn-primary">Ακύρωση</a>
        </div>
    </div>
</form>

<a class="btn btn-primary btn-sm" href="/Students/Index">Επιστροφή</a>
