@page
@model SevStudentsApp.Pages.Courses.IndexModel
@{
}

<h2>Λίστα εκπαιδευτικών προγραμμάτων</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Περιγραφή Μαθήματος</th>
            <th>Διδάσκων</th></tr>
        </thead>
        <tbody>
            @if (Model.courses is not null) 
            {
                @foreach (var course in Model.courses) 
                {
                    <tr>
                        <td>@course.Id</td>
                        <td>@course.description</td>
                    @{
                        var teacher = Model.teachers.Where(x => x.Id == course.teacherId).First();
                    }
                        <td>@teacher.Lastname</td>

                                <td>
                                    <a class="btn btn-primary btn-sm" 
                                    href="/Courses/Update?id=@course.Id">Τροποποίηση</a>
                                            <a class="btn btn-primary btn-sm" 
                                            onclick="return confirm('Έχετε επιλέξει διαγραφή.Αυτή η ενέργεια δεν μπορεί να αναιρεθεί. Θέλετε να συνεχίσετε;')" 
                                                    href="/Courses/Delete?id=@course.Id">Διαγραφή</a>
                                </td>
                    </tr>
                }
            }
          
        </tbody>
</table>

<a class="btn btn-primary btn-sm" href="/">Επιστροφή</a>
